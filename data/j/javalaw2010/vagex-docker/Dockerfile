From consol/centos-xfce-vnc:latest  
  
WORKDIR /root/  
RUN yum -y remove firefox && yum install -y bzip2 && wget
https://addons.mozilla.org/firefox/downloads/latest/vagex-firefox-add-
on/addon-321174-latest.xpi && wget
https://ftp.mozilla.org/pub/firefox/releases/38.0b1/linux-x86_64/zh-
CN/firefox-38.0b1.tar.bz2 \  
&& bzip2 -d firefox-38.0b1.tar.bz2 && tar xvf firefox-38.0b1.tar  

