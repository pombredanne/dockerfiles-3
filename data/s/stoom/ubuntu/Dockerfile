# Pull base image.  
FROM ubuntu:16.10  
  
MAINTAINER Stoom  
  
# get dev essentials  
RUN apt-get update && apt-get install -y \  
git-core \  
gnupg \  
cmake \  
pkg-config \  
flex \  
bison \  
gperf \  
curl \  
gcc-multilib \  
g++-multilib \  
libc6-dev-i386 \  
libc6-dev \  
wget \  
automake \  
build-essential \  
man-db \  
autoconf \  
python-pip  
  

