FROM teedev/base  
  
# for capybara-webkit & selenium  
RUN apt-get install -y qt5-default libqt5webkit5-dev gstreamer1.0-plugins-base
gstreamer1.0-tools gstreamer1.0-x xvfb x11-xkb-utils xfonts-100dpi
xfonts-75dpi xfonts-scalable xfonts-cyrillic gsfonts --fix-missing --no-
install-recommends && apt-get clean  
  

