# 基础镜像  
From ubuntu:17.10  
  
# 维护者信息  
MAINTAINER YunlongYang yunlong17568@gmail.com  
  
# 镜像的操作指令  
RUN apt-get update  
RUN apt-get upgrade  
RUN apt-get -y install openjdk-8-jdk  
RUN apt-get install -y libreadline7  
RUN apt-get install -y git flex bison gperf build-essential libncurses5-dev  
RUN apt-get install -y tofrodos python-markdown libxml2-utils xsltproc
zlib1g-dev  
RUN apt-get install -y dpkg-dev libsdl1.2-dev libesd0-dev  
RUN apt-get install -y git-core gnupg flex bison gperf build-essential  
RUN apt-get install -y zip curl zlib1g-dev gcc-multilib g++-multilib  
RUN apt-get install -y libc6-dev-i386  
RUN apt-get install -y lib32ncurses5-dev x11proto-core-dev libx11-dev  
RUN apt-get install -y libgl1-mesa-dev libxml2-utils xsltproc unzip m4  
RUN apt-get install -y lib32z-dev ccache  
  
CMD echo "Welcome to use AOSP-HATCH, you can now compile your AOSP, just cd to
your path."  

