FROM ubuntu:latest  
MAINTAINER Storj Labs (www.storj.io)  
MAINTAINER meldon  
  
RUN apt-get update && \  
apt-get -y install apt-utils curl && \  
curl -sL https://deb.nodesource.com/setup_8.x | bash - && \  
apt-get -y install build-essential git libssl-dev nodejs python vim && \  
npm install --global storjshare-daemon --unsafe-perm && \  
apt-get --purge remove -y apt-utils build-essential git libssl-dev python && \  
apt autoremove -y && \  
apt-get clean -y && \  
rm -rf /var/lib/apt/lists/* && \  
rm -rf /tmp/npm* && \  
echo npm --version; npm --version && \  
echo storjshare --version; storjshare --version  
  
RUN echo "jijikos" | adduser storj  
  
USER storj  
RUN mkdir /home/storj/configs && \  
mkdir /home/storj/data && \  
mkdir /home/storj/logs  
  
COPY start.sh /home/storj/  
  
EXPOSE 4000  
EXPOSE 4001  
EXPOSE 4002  
EXPOSE 4003  
VOLUME /home/storj/data  
  
CMD ["/home/storj/start.sh"]

